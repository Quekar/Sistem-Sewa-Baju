<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="700.0" prefWidth="1100.0" 
            style="-fx-background-color: #f9f9f9;" 
            xmlns="http://javafx.com/javafx/25" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.mycompany.sewabaju.controllers.admin.ManageKategoriController">
   <children>
      <!-- Top Bar -->
      <HBox alignment="CENTER_LEFT" layoutX="0.0" layoutY="0.0" prefHeight="80.0" prefWidth="1100.0" 
            spacing="20.0" style="-fx-background-color: #E6B3A8;">
         <padding>
            <Insets left="30.0" right="30.0" />
         </padding>
         <children>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Kelola Kategori" HBox.hgrow="ALWAYS">
               <font>
                  <Font name="Poppins Bold" size="24.0" />
               </font>
            </Text>
            <Button fx:id="btnBack" onAction="#handleBack" 
                    text="â† Kembali" 
                    style="-fx-background-color: white; -fx-background-radius: 20;">
               <font>
                  <Font name="Poppins SemiBold" size="12.0" />
               </font>
            </Button>
         </children>
         <effect>
            <DropShadow height="10.0" offsetY="3.0" radius="4.5" />
         </effect>
      </HBox>
      
      <!-- Left Side - Table -->
      <VBox layoutX="30.0" layoutY="110.0" prefHeight="560.0" prefWidth="640.0" 
            spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 15;">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <effect>
            <DropShadow height="8.0" offsetY="2.0" radius="3.5" />
         </effect>
         <children>
            <Text text="Daftar Kategori" strokeType="OUTSIDE" strokeWidth="0.0">
               <font>
                  <Font name="Poppins Bold" size="16.0" />
               </font>
            </Text>
            
            <!-- Table -->
            <TableView fx:id="tableKategori" prefHeight="450.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colId" prefWidth="80.0" text="ID" />
                  <TableColumn fx:id="colNama" prefWidth="200.0" text="Nama Kategori" />
                  <TableColumn fx:id="colDeskripsi" prefWidth="340.0" text="Deskripsi" />
               </columns>
            </TableView>
            
            <!-- Action Buttons -->
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="btnEdit" onAction="#handleEdit" 
                          text="âœï¸ Edit" 
                          style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 8;">
                     <font>
                        <Font name="Poppins SemiBold" size="11.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnDelete" onAction="#handleDelete" 
                          text="ðŸ—‘ï¸ Hapus" 
                          style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-background-radius: 8;">
                     <font>
                        <Font name="Poppins SemiBold" size="11.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      
      <!-- Right Side - Form -->
      <VBox layoutX="700.0" layoutY="110.0" prefHeight="560.0" prefWidth="370.0" 
            spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 15;">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <effect>
            <DropShadow height="8.0" offsetY="2.0" radius="3.5" />
         </effect>
         <children>
            <Label fx:id="lblFormTitle" text="Tambah Kategori Baru" textFill="#333333">
               <font>
                  <Font name="Poppins Bold" size="16.0" />
               </font>
            </Label>
            
            <!-- Nama Kategori -->
            <VBox spacing="5.0">
               <children>
                  <Text text="Nama Kategori *" strokeType="OUTSIDE" strokeWidth="0.0">
                     <font>
                        <Font name="Poppins Regular" size="11.0" />
                     </font>
                  </Text>
                  <TextField fx:id="namaField" promptText="Contoh: Jas, Kebaya, Gaun">
                     <font>
                        <Font name="Poppins Regular" size="11.0" />
                     </font>
                  </TextField>
               </children>
            </VBox>
            
            <!-- Deskripsi -->
            <VBox spacing="5.0" VBox.vgrow="ALWAYS">
               <children>
                  <Text text="Deskripsi" strokeType="OUTSIDE" strokeWidth="0.0">
                     <font>
                        <Font name="Poppins Regular" size="11.0" />
                     </font>
                  </Text>
                  <TextArea fx:id="deskripsiArea" prefHeight="150.0" 
                            promptText="Deskripsi kategori (opsional)" 
                            wrapText="true">
                     <font>
                        <Font name="Poppins Regular" size="11.0" />
                     </font>
                  </TextArea>
               </children>
            </VBox>
            
            <!-- Form Buttons -->
            <HBox spacing="10.0">
               <children>
                  <Button fx:id="btnSave" onAction="#handleSave" 
                          prefHeight="40.0" prefWidth="165.0" 
                          text="ðŸ’¾ Simpan" 
                          style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 8;">
                     <font>
                        <Font name="Poppins SemiBold" size="12.0" />
                     </font>
                  </Button>
                  <Button fx:id="btnCancel" onAction="#handleCancel" 
                          prefHeight="40.0" prefWidth="165.0" 
                          text="âœ–ï¸ Batal" 
                          style="-fx-background-color: #9E9E9E; -fx-text-fill: white; -fx-background-radius: 8;">
                     <font>
                        <Font name="Poppins SemiBold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>