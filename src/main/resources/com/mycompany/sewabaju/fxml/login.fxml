<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane alignment="CENTER" style="-fx-background-color: #f3f3f3;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.sewabaju.controllers.LoginController">
   <children>
      <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="832.0" minWidth="1280.0" prefHeight="832.0" prefWidth="1280.0" style="-fx-background-color: #f3f3f3;">
         <children>
            <!-- Logo -->
            <ImageView fitHeight="150.0" fitWidth="250.0" layoutX="515.0" layoutY="100.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/logo.png" />
               </image>
            </ImageView>
            
            <!-- Welcome Text -->
            <Text layoutX="520.0" layoutY="280.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome Back !" textAlignment="CENTER">
               <font>
                  <Font name="Poppins SemiBold" size="32.0" />
               </font>
            </Text>
            
            <Text layoutX="480.0" layoutY="315.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Login to continue to SewaBaju" fill="#666666" textAlignment="CENTER">
               <font>
                  <Font name="Poppins Regular" size="16.0" />
               </font>
            </Text>
            
            <!-- Email Label -->
            <Text layoutX="415.0" layoutY="380.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Email" fill="#333333">
               <font>
                  <Font name="Poppins Medium" size="18.0" />
               </font>
            </Text>
            
            <!-- Email TextField -->
            <TextField fx:id="emailField" layoutX="415.0" layoutY="390.0" prefHeight="50.0" prefWidth="450.0" promptText="Enter your email" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #E0E0E0; -fx-border-radius: 10; -fx-border-width: 1.5;">
               <font>
                  <Font name="Poppins Regular" size="16.0" />
               </font>
               <padding>
                  <Insets left="15.0" right="15.0" />
               </padding>
            </TextField>
            
            <!-- Password Label -->
            <Text layoutX="415.0" layoutY="480.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Password" fill="#333333">
               <font>
                  <Font name="Poppins Medium" size="18.0" />
               </font>
            </Text>
            
            <!-- Password Field -->
            <PasswordField fx:id="passwordField" layoutX="415.0" layoutY="490.0" prefHeight="50.0" prefWidth="450.0" promptText="Enter your password" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: #E0E0E0; -fx-border-radius: 10; -fx-border-width: 1.5;">
               <font>
                  <Font name="Poppins Regular" size="16.0" />
               </font>
               <padding>
                  <Insets left="15.0" right="15.0" />
               </padding>
            </PasswordField>
            
            <!-- Remember Me Checkbox (Optional) -->
            <CheckBox fx:id="chkRememberMe" layoutX="415.0" layoutY="560.0" text="Remember me">
               <font>
                  <Font name="Poppins Regular" size="14.0" />
               </font>
            </CheckBox>
            
            <!-- Error Label -->
            <Label fx:id="lblError" layoutX="415.0" layoutY="590.0" prefWidth="450.0" textFill="RED" visible="false" wrapText="true">
               <font>
                  <Font name="Poppins Regular" size="14.0" />
               </font>
            </Label>
            
            <!-- Login Button -->
            <Button fx:id="btnLogin" layoutX="520.0" layoutY="630.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="55.0" prefWidth="240.0" style="-fx-background-color: #E6B3A8; -fx-background-radius: 30; -fx-cursor: hand;" text="LOGIN" textFill="WHITE">
               <font>
                  <Font name="Poppins Bold" size="20.0" />
               </font>
            </Button>
            
            <!-- Sign Up Link -->
            <Text layoutX="540.0" layoutY="720.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Don't have an account?" fill="#666666">
               <font>
                  <Font name="Poppins Regular" size="14.0" />
               </font>
            </Text>
            
            <Hyperlink fx:id="linkRegister" layoutX="688.0" layoutY="703.0" text="Sign Up" textFill="#D78371" underline="true">
               <font>
                  <Font name="Poppins SemiBold" size="14.0" />
               </font>
            </Hyperlink>
            
         </children>
      </AnchorPane>
   </children>
</StackPane>